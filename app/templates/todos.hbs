

<div class="row"> 
	<div class="col-md-4"> 
		{{#link-to 'todos.new' class='btn btn-success'}} 
			Create Todo
		{{/link-to}}
		<hr>
		{{outlet}}
	</div>
	<div class="col-md-8">
		{{#each sortedTodos as |todo|}}
		<div class="well">
			<h4 >
				{{todo.title}}
				<span class="label label-primary pull-right">
					{{debugger}}
					{{format-date todo.date}}
				</span>				
			</h4>
			{{todo.body}}
			
		</div>			
		{{/each}}
	</div>


</div>

